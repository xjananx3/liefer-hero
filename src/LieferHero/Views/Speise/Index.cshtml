@model IEnumerable<Speise>

@{
    
}

<h1>Speisen</h1>

<table class="table table-bordered">
    <thead>
    <tr>
        <th>Nummer</th>
        <th>Name</th>
        <th>Preis</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Preis</td>
            <td><a type="btn btn-success" asp-controller="Speise" asp-action="Detail" asp-route-id="@item.Id"
                   class="btn btn-sm btn-outline-secondary">Anzeigen</a>
                <a type="btn btn-success" asp-controller="Speise" asp-action="Edit" asp-route-id="@item.Id"
                   class="btn btn-sm btn-outline-secondary">Bearbeiten</a>
                <a type="btn btn-success" asp-controller="Speise" asp-action="Delete" asp-route-id="@item.Id"
                   class="btn btn-sm btn-outline-secondary">LÃ¶schen</a></td>
        </tr>
    }
    </tbody>
</table>