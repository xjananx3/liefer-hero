<form method="post" asp-action="Delete" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" placeholder="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Beschreibung">Beschreibung</label>
        <input asp-for="Beschreibung" class="form-control" placeholder="Beschreibung">
        <span asp-validation-for="Beschreibung" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Preis">Preis</label>
        <input asp-for="Preis" class="form-control" placeholder="Preis">
        <span asp-validation-for="Preis" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ErstelltAm">Erstellt am</label>
        <input asp-for="ErstelltAm" class="form-control" placeholder="ErstelltAm">
        <span asp-validation-for="ErstelltAm" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Bild">Bild</label>
        <input asp-for="Bild" type="file" class="form-control" placeholder="Bild">
        <span asp-validation-for="Bild" class="text-danger"></span>
    </div>

</form>

<div class="form-group">
    <form action="Delete" method="post">
        <input type="hidden" asp-for="Id"/>
        <input type="submit" value="Confirm" class="btn btn-danger float-right mt-3"/>
    </form>
</div>